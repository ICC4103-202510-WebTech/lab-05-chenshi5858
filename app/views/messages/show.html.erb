<div class="card shadow-sm p-4">
  <h2 class="mb-4">Message Details</h2>

  <p><strong>User:</strong> <%= @message.user.email %></p>
  <p><strong>Chat ID:</strong> <%= @message.chat_id %></p>
  <p><strong>Body:</strong> <%= @message.body %></p>

  <div class="mt-3">
    <% if can?(:edit, @message) %>
      <%= link_to 'Edit Message', edit_message_path(@message), class: "btn btn-primary" %>
    <% end %>
    <%= link_to 'Back to Messages', messages_path, class: "btn btn-secondary ms-2" %>
    <% if can?(:destroy, @message) %>
      <%= link_to 'Delete Message', message_path(@message), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger ms-2" %>
    <% end %>
  </div>
</div>
