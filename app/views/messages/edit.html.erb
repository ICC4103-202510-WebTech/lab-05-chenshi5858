<h1>Edit Message</h1>

<%= form_with model: @message, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3">
    <%= form.label :user_id, class: "form-label" %>
    <%= form.collection_select :user_id, @users, :id, :email, { prompt: 'Select a User' }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :chat_id, class: "form-label" %>
    <%= form.collection_select :chat_id, @chats, :id, :id, { prompt: 'Select a Chat' }, class: "form-select" %>
  </div>

  <div class="mt-3">
    <%= form.submit "Update Message", class: "btn btn-primary" %>
  </div>
<% end %>
