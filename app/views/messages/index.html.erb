<h1>Messages</h1>

<table class="table table-bordered table-striped">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>Chat ID</th>
      <th>User ID</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= message.chat_id %></td>
        <td><%= message.user_id %></td>
        <td><%= message.body %></td>
        <td>
          <%= link_to 'Show', message_path(message), class: "btn btn-info btn-sm" if can?(:read, message) %>
          <%= link_to 'Edit', edit_message_path(message), class: "btn btn-warning btn-sm" if can?(:edit, message) %>
          <%= link_to 'Delete', message_path(message), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" if can?(:destroy, message) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can?(:create, Message) %>
  <%= link_to "Add New Message", new_message_path, class: "btn btn-primary" %>
<% end %>
