<h1 class="mb-4">Chats</h1>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Sender ID</th>
      <th>Receiver ID</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.id %></td>
        <td><%= chat.sender_id %></td>
        <td><%= chat.receiver_id %></td>
        <td>
          <%= link_to 'Show', chat_path(chat), class: "btn btn-sm btn-info me-1" %>
          <%= link_to 'Edit', edit_chat_path(chat), class: "btn btn-sm btn-warning" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add New Chat", new_chat_path, class: "btn btn-primary mt-3" %>
